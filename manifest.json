{
    "manifest_version": 2,

    "name": "Mooc优化插件",
    "description": "Mooc优化插件，主要去除一些广告",
    "version": "1.0",

    "permissions": [
        "http://*/*","https://*/*",
        "tabs",
        "notifications",
        "alarms"
    ],
    "browser_action": {
    "default_icon": "logo.png"
    }
    ,
    "background": 
    {
        "scripts": ["background.js"]
    },
    "web_accessible_resources": [
        "logo.png"
    ]
    ,
    "content_scripts": [
        {
             "matches": ["https://www.icourse163.org/*"],
             "css": ["app.css", "bootstrap.min.css"],
             "js": ["jquery-3.2.1.min.js","app.js", "bootstrap.bundle.min.js"]
        }
    ]
    
}